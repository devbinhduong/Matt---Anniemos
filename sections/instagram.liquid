{%- liquid
    if section.settings.image_ratio == 'adapt'
    assign highest_ratio = 1
    for block in section.blocks
        if block.settings.collection != blank and block.settings.collection.featured_image and block.settings.collection.featured_image.aspect_ratio > highest_ratio
        assign highest_ratio = block.settings.collection.featured_image.aspect_ratio
        endif
    endfor
    endif
    capture icon_arrow_list
    render 'icon-arrow-list'
    endcapture
-%}
<div class="section_instagram pos-relative spacing spacing-xs color-{{ section.settings.color_scheme }} gradient"
    style="
        --padding-top: {{ section.settings.padding_top }}px;
        --padding-bottom: {{ section.settings.padding_bottom }}px;
        --padding-top-xs: {{ section.settings.padding_top_mobile }}px;
        --padding-bottom-xs: {{ section.settings.padding_bottom_mobile }}px;
    "
>
    <div class="{{ section.settings.section_width }} m-auto"{% if section.settings.section_width == 'customized-width' %} style="--page-width: {{ section.settings.customize_width }}px;"{% endif %}>
        {%- if section.settings.layout == 'carousel' -%}
            {%- if section.settings.logo_image != blank or section.settings.heading != blank or section.settings.link_label != blank -%}
                <animate-element class="p-w__header center d-block m-spacing{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                    {%- if section.settings.logo_image != blank -%}
                        <div class="p-w__logo break focus-inset d-inline-block m-0 m-spacing"
                            data-animate="{{ section.settings.text_animation }}"
                            style="
                                --m-w: {{ section.settings.logo_width }}px;
                                --m-spacing-b: {{ section.settings.logo_margin_bottom }}px;
                            "
                        >
                            {%- assign logo_alt = section.settings.logo_image.alt | default: shop.name | escape -%}
                            {%- assign logo_height = section.settings.logo_width | divided_by: section.settings.logo_image.aspect_ratio -%}
                            {% capture sizes %}(max-width: {{ section.settings.logo_width | times: 2 }}px) 50vw, {{ section.settings.logo_width }}px{% endcapture %}
                            {% capture widths %}{{ section.settings.logo_width }}, {{ section.settings.logo_width | times: 1.5 | round }}, {{ section.settings.logo_width | times: 2 }}{% endcapture %}
                            {{ section.settings.logo_image | image_url: width: 600 | image_tag:
                                class: 'm-w h-auto',
                                loading: 'lazy',
                                widths: widths,
                                height: logo_height,
                                width: section.settings.logo_width,
                                alt: logo_alt,
                                sizes: sizes,
                                preload: true
                            }}
                        </div>
                    {%- endif -%}
                    {%- if section.settings.heading != blank -%}
                        <div class="p-w__heading {{ section.settings.heading_size | prepend: 'heading-size-' }} m-0 m-spacing"
                            data-animate="{{ section.settings.text_animation }}"
                            style="--m-spacing-b: {{ section.settings.heading_margin_bottom }}px;"
                        >
                            {{ section.settings.heading }}
                        </div>
                    {%- endif -%}
                    {%- if section.settings.link_label != blank -%}
                        <div class="heading-button m-spacing"
                            data-animate="{{ section.settings.text_animation }}"
                            style="--m-spacing-b: {{ section.settings.link_margin_bottom }}px;"
                        >
                            <a {% if section.settings.url_link == blank %}role="link" aria-disabled="true"{% else %}href="{{ section.settings.url_link }}"{% endif %} 
                                class="p-w__button
                                    {% if section.settings.show_view_all == 'link' %} 
                                        link u-link {{ settings.link_type | prepend: "link--style-" }}
                                    {% else %} 
                                        button {{ settings.button_type | prepend: 'button--main-' }} {{ settings.button_icon | prepend: 'button--icon-' }} {{ settings.button_style | prepend: 'button--style-' }}
                                    {% endif %}
                                " 
                                aria-label="{{ 'sections.featured_collection.only_link_label' | t: link_name: section.settings.link_label }}"
                            >
                                <span class="text link-style">{{ section.settings.link_label | escape }}</span>
                                {%- if section.settings.show_view_all == 'button' -%}{% render 'button-main-style' %}{%- endif -%}
                            </a>
                        </div>
                    {%- endif -%}
                </animate-element>
            {%- endif -%}
        {%- endif -%}
        <div class="p-w__content instagram__{{ section.settings.layout }}{% if section.settings.layout == 'carousel' and settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {%- if section.settings.layout == 'floating' %}
                style="--height-floating: {{ section.settings.height_floating | divided_by: 10.0 }}rem;"
            {%- endif -%}
        >
            {%- if section.settings.layout == 'carousel' -%}
                <slider-component class="d-block pos-relative swiper-more-item{% if section.settings.carousel_infinite_scroll %} infinite-scroll{% endif %}"
                    data-space-between="{{ section.settings.spacing_mobile }}" data-space-between-tablet="{{ section.settings.spacing_tablet }}" data-space-between-desktop="{{ section.settings.spacing_desktop }}"
                    data-type-pagination="{{ section.settings.pagination_type }}"
                    data-item-xxl="{{ section.settings.carousel_number }}" 
                    data-item-xl="{% if section.settings.carousel_number >= 4 %}{{ section.settings.carousel_number | minus: 1 }}{% else %}{{ section.settings.carousel_number }}{% endif %}" 
                    data-item-lg="{{ section.settings.carousel_number_tablet }}" 
                    data-item-md="{{ section.settings.carousel_number_tablet }}" 
                    data-item-sm="{{ section.settings.carousel_number_mobile }}" 
                    data-item-xs="{{ section.settings.carousel_number_mobile }}"
                >
                    <div class="swiper d-block pos-relative no-js-overflow-x swiper-initialized swiper-horizontal swiper-backface-hidden o-v">
                        <div class="gallery-js carousel__items swiper-wrapper" id="Slider-{{ section.id }}" aria-label="gallery list">
                            {%- for block in section.blocks -%}
                                <div class="instagram__item carousel__item swiper-slide no-js-grid__item no-js-grid__scroll {{ class_item }}" 
                                    role="listitem" 
                                    id="Slide-{{ section.id }}-{{ forloop.index }}" 
                                    {% if settings.animations_reveal_on_scroll %}
                                        style="--animation-order: {{ forloop.index }};"
                                    {% endif %}
                                    {{ block.shopify_attributes }}
                                >
                                    <animate-element class="item o-h d-block pos-relative color-foreground {{ settings.link_type | prepend: "link--style-" }}">
                                        <div class="item-gallery d-block pos-relative" {% if block.settings.image != blank %} data-src="{{ block.settings.image | image_url }}"{% endif %} >
                                            {%- if block.settings.image != blank -%}
                                                {%- capture sizes -%}
                                                    (min-width: 990px) 550px, (min-width: 750px) 550px, calc(100vw - 30px)
                                                {%- endcapture -%}
                                                {{
                                                    block.settings.image | image_url: width: 1500 | image_tag:
                                                    loading: 'lazy',
                                                    sizes: sizes,
                                                    widths: '165, 275, 360, 550, 750, 1070, 1500',
                                                    class: 'motion-reduce'
                                                }}
                                            {%- else -%}
                                                {% capture index %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
                                                {{ 'collection-' | append: index | placeholder_svg_tag: 'placeholder-svg' }}
                                            {%- endif -%}
                                                <span class="icon-show-more pos-absolute top-0 left-0 w-100 h-100 z-index-2 d-flex a-i-center j-c-center">
                                                    {% render 'icon-plus-2' %}
                                                </span>
                                        </div>
                                        {%- if block.settings.image_link != blank -%}
                                            <a href="{{ block.settings.image_link }}" class="button-shop pos-absolute z-index-3 d-flex a-i-center c-pointer u-u">
                                                <span class="button-shop-icon d-flex a-i-center j-c-center">
                                                    {% render 'icon-bag-2' %}
                                                </span>
                                            </a>
                                        {%- endif -%}
                                    </animate-element>
                                </div>
                            {%- endfor -%}
                        </div>
                        <div class="carousel__controls arrow-style-{{ settings.arrow_style }} arrow-pos-block--{{ section.settings.arrows_position }} carousel__controls--inner{% if section.settings.arrows_type == 'none' %} hidden{% endif %} no-js-hidden" style="--padding: 0px;">
                            {%- if settings.arrow_style == 'modern-plus' -%}
                                {%- if section.settings.arrows_type != 'none' -%}
                                    <div class="arrow-wrap d-flex top-0 right-0 z-index-2 pos-absolute swiper-screen__{{ section.settings.arrows_type }}">
                                        <button type="button" data-step="1" class="button-slider button-slider__prev color-arrow t-button b-none c-pointer pos-absolute z-index-2 b-circle p-0 d-flex a-i-center j-c-center swiper-button-prev" aria-label="{{ 'accessibility.previous_slide' | t }}" aria-controls="Slider-{{ section.id }}" name="previous">
                                            {{ icon_arrow_list }}
                                        </button>
                                        <button type="button" data-step="1" class="button-slider button-slider__next color-arrow t-button b-none c-pointer pos-absolute z-index-2 b-circle p-0 d-flex a-i-center j-c-center swiper-button-next" aria-label="{{ 'accessibility.next_slide' | t }}" aria-controls="Slider-{{ section.id }}" name="next">
                                            {{ icon_arrow_list }}
                                        </button>
                                        <div class="mask-overlay pos-absolute top-0 left-0"></div>
                                    </div>
                                    <div class="swiper-pagination swiper-screen__{{ section.settings.enable_pagination_type }} pos-relative pos-relative-xs"></div>
                                {% endif %}
                            {%- else -%}
                                <button type="button" data-step="1" class="button-slider button-slider__prev swiper-screen__{{ section.settings.arrows_type }} color-arrow t-button b-none c-pointer pos-absolute z-index-2 b-circle p-0 d-flex a-i-center j-c-center swiper-button-prev" aria-label="{{ 'accessibility.previous_slide' | t }}" aria-controls="Slider-{{ section.id }}" name="previous">
                                    {{ icon_arrow_list }}
                                </button>
                                <div class="swiper-pagination swiper-screen__{{ section.settings.enable_pagination_type }} pos-relative pos-relative-xs"></div>
                                <button type="button" data-step="1" class="button-slider button-slider__next swiper-screen__{{ section.settings.arrows_type }} color-arrow t-button b-none c-pointer pos-absolute z-index-2 b-circle p-0 d-flex a-i-center j-c-center swiper-button-next" aria-label="{{ 'accessibility.next_slide' | t }}" aria-controls="Slider-{{ section.id }}" name="next">
                                    {{ icon_arrow_list }}
                                </button>
                            {%- endif -%}
                        </div>
                    </div>
                </slider-component>
            {%- else -%}
                {%- if section.settings.logo_image != blank or section.settings.heading != blank or section.settings.link_label != blank -%}
                    <div class="p-w__header center d-block m-spacing pos-absolute pos-absolute-c-c z-index-1">
                        {%- if section.settings.logo_image != blank -%}
                            <div class="p-w__logo break focus-inset d-inline-block m-0 m-spacing"
                                data-animate="{{ section.settings.text_animation }}"
                                style="
                                    --m-w: {{ section.settings.logo_width }}px;
                                    --m-spacing-b: {{ section.settings.logo_margin_bottom }}px;
                                "
                            >
                                {%- assign logo_alt = section.settings.logo_image.alt | default: shop.name | escape -%}
                                {%- assign logo_height = section.settings.logo_width | divided_by: section.settings.logo_image.aspect_ratio -%}
                                {% capture sizes %}(max-width: {{ section.settings.logo_width | times: 2 }}px) 50vw, {{ section.settings.logo_width }}px{% endcapture %}
                                {% capture widths %}{{ section.settings.logo_width }}, {{ section.settings.logo_width | times: 1.5 | round }}, {{ section.settings.logo_width | times: 2 }}{% endcapture %}
                                {{ section.settings.logo_image | image_url: width: 600 | image_tag:
                                    class: 'm-w h-auto',
                                    loading: 'lazy',
                                    widths: widths,
                                    height: logo_height,
                                    width: section.settings.logo_width,
                                    alt: logo_alt,
                                    sizes: sizes,
                                    preload: true
                                }}
                            </div>
                        {%- endif -%}
                        {%- if section.settings.heading != blank -%}
                            <div class="p-w__heading {{ section.settings.heading_size | prepend: 'heading-size-' }} m-0 m-spacing"
                                data-animate="{{ section.settings.text_animation }}"
                                style="--m-spacing-b: {{ section.settings.heading_margin_bottom }}px;"
                            >
                                {{ section.settings.heading }}
                            </div>
                        {%- endif -%}
                        {%- if section.settings.link_label != blank -%}
                            <div class="heading-button m-spacing"
                                data-animate="{{ section.settings.text_animation }}"
                                style="--m-spacing-b: {{ section.settings.link_margin_bottom }}px;"
                            >
                                <a {% if section.settings.url_link == blank %}role="link" aria-disabled="true"{% else %}href="{{ section.settings.url_link }}"{% endif %} 
                                    class="p-w__button
                                        {% if section.settings.show_view_all == 'link' %} 
                                            link u-link {{ settings.link_type | prepend: "link--style-" }}
                                        {% else %} 
                                            button {{ settings.button_type | prepend: 'button--main-' }} {{ settings.button_icon | prepend: 'button--icon-' }} {{ settings.button_style | prepend: 'button--style-' }}
                                        {% endif %}
                                    " 
                                    aria-label="{{ 'sections.featured_collection.only_link_label' | t: link_name: section.settings.link_label }}"
                                >
                                    <span class="text link-style">{{ section.settings.link_label | escape }}</span>
                                    {%- if section.settings.show_view_all == 'button' -%}{% render 'button-main-style' %}{%- endif -%}
                                </a>
                            </div>
                        {%- endif -%}
                    </div>
                {%- endif -%}
                <animate-element class="gallery-js instagram__items pos-absolute inset-0" id="Slider-{{ section.id }}">
                    {%- for block in section.blocks -%}
                        {%- liquid 
                            assign horizontalMobile = ''
                            if block.settings.horizontal_image > 65
                                assign horizontalMobile = 'horizontalMobile-right'
                            elsif block.settings.horizontal_image < 10
                                assign horizontalMobile = 'horizontalMobile-left'
                            endif
                        -%}
                        <div class="instagram__item pos-absolute m-w m-h {{ horizontalMobile }} rounded-ovh animate-{{ block.settings.b_float_animation }}"
                            data-animate="fade-up"
                            style="
                                --m-w: {{ block.settings.width_image | divided_by: 10.0 }}rem;
                                --m-h: {{ block.settings.height_image | divided_by: 10.0 }}rem;
                                --top: {{ block.settings.vertical_image }}%;
                                --left: {{ block.settings.horizontal_image }}%; 
                                --block-rounded: {{ block.settings.custom_block_rounded | divided_by: 10.0 }}rem;
                                --speed-ani: {{ block.settings.b_speed_float_animation }}s;
                                --a-delay: {{ '0.2' | times: forloop.index }}s;
                            "
                            {{ block.shopify_attributes }}
                        >
                            <animate-element class="item o-h pos-relative">
                                <div class="item-gallery h-100"{% if block.settings.image != blank %} data-src="{{ block.settings.image | image_url }}"{% endif %}>
                                    {%- if block.settings.image != blank -%}
                                        {%- capture sizes -%}
                                            (min-width: 990px) 550px, (min-width: 750px) 550px, calc(100vw - 30px)
                                        {%- endcapture -%}
                                        {{
                                            block.settings.image | image_url: width: 1500 | image_tag:
                                            loading: 'lazy',
                                            sizes: sizes,
                                            widths: '165, 275, 360, 550, 750, 1070, 1500',
                                            class: 'w-100 h-100 o-f-cover motion-reduce'
                                        }}
                                    {%- else -%}
                                        {% capture index %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
                                        {{ 'collection-' | append: index | placeholder_svg_tag: 'placeholder-svg' }}
                                    {%- endif -%}
                                    <span class="icon-show-more pos-absolute top-0 left-0 w-100 h-100 z-index-2 d-flex a-i-center j-c-center">
                                        {% render 'icon-plus-2' %}
                                    </span>
                                </div>
                                {%- if block.settings.image_link != blank -%}
                                    <a href="{{ block.settings.image_link }}" class="button-shop pos-absolute z-index-3 d-flex a-i-center c-pointer u-u">
                                        <span class="button-shop-icon d-flex a-i-center j-c-center">
                                            {% render 'icon-bag-2' %}
                                        </span>
                                    </a>
                                {%- endif -%}
                            </animate-element>
                        </div>
                    {%- endfor -%}
                </animate-element>
            {%- endif -%}
        </div>
    </div>
</div>
{% schema %}
{
    "name": "t:sections.instagram.name",
    "tag": "section",
    "class": "section",
    "disabled_on": {
        "groups": ["header", "footer", "custom.popup"]
    },
    "settings": [
    {
        "type": "select",
        "id": "section_width",
        "options": [
        {
            "value": "full-width",
            "label": "t:sections.all.section_width.options__1"
        },
        {
            "value": "page-width",
            "label": "t:sections.all.section_width.options__2"
        },
        {
            "value": "customized-width",
            "label": "t:sections.all.section_width.options__3"
        }],
        "default": "page-width",
        "label": "t:sections.all.section_width.label"
    },
    {
        "type": "range",
        "id": "customize_width",
        "min": 1000,
        "max": 1800,
        "step": 50,
        "default": 1800,
        "unit": "px",
        "label": "t:sections.all.customize_width.label",
        "visible_if": "{{ section.settings.section_width == 'customized-width' }}"
    },
    {
        "type": "header",
        "content": "t:sections.all.heading.label"
    },
    {
        "type": "image_picker",
        "id": "logo_image",
        "label": "t:sections.countdown-showcase-hero.setting.logo.label",
        "info": "t:sections.countdown-showcase-hero.setting.logo.info"
    },
    {
        "type": "range",
        "id": "logo_width",
        "min": 30,
        "max": 120,
        "step": 1,
        "default": 42,
        "unit": "px",
        "label": "t:sections.header.settings.logo_width.label"
    },
    {
        "type": "range",
        "id": "logo_margin_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 16,
        "unit": "px",
        "label": "t:sections.all.spacing.logo_margin_bottom"
    },
    {
        "type": "textarea",
        "id": "heading",
        "default": "Instagram",
        "label": "t:sections.all.heading.label"
    },
    {
        "type": "select",
        "id": "heading_size",
        "options": [
        {
            "value": "default",
            "label": "t:sections.all.font_size.options"
        },
        {
            "value": "xx-small",
            "label": "t:sections.all.font_size.options__1"
        },
        {
            "value": "x-small",
            "label": "t:sections.all.font_size.options__2"
        },
        {
            "value": "small",
            "label": "t:sections.all.font_size.options__3"
        },
        {
            "value": "medium",
            "label": "t:sections.all.font_size.options__4"
        },
        {
            "value": "large",
            "label": "t:sections.all.font_size.options__5"
        },
        {
            "value": "x-large",
            "label": "t:sections.all.font_size.options__6"
        },
        {
            "value": "xx-large",
            "label": "t:sections.all.font_size.options__7"
        },
        {
            "value": "xxx-large",
            "label": "t:sections.all.font_size.options__8"
        }],
        "default": "default",
        "label": "t:sections.all.font_size.label__2"
    },
    {
        "type": "range",
        "id": "heading_margin_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 16,
        "unit": "px",
        "label": "t:sections.all.spacing.heading_margin_bottom"
    },
    {
        "type": "select",
        "id": "show_view_all",
        "options": [
        {
            "value": "link",
            "label": "t:sections.featured-collection.settings.show_view_all.options__2"
        },
        {
            "value": "button",
            "label": "t:sections.featured-collection.settings.show_view_all.options__3"
        }],
        "default": "link",
        "label": "t:sections.featured-collection.settings.show_view_all.label__1"
    },
    {
        "type": "text",
        "id": "link_label",
        "default": "Link label",
        "label": "t:sections.all.button_link.label__1"
    },
    {
        "type": "url",
        "id": "url_link",
        "label": "t:sections.all.link_label.label"
    },
    {
        "type": "range",
        "id": "link_margin_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 16,
        "unit": "px",
        "label": "t:sections.all.spacing.button_link_margin_bottom"
    },
    {
        "type": "header",
        "content": "t:sections.instagram.settings.block_image.label__1"
    },
    {
        "type": "select",
        "id": "layout",
        "options": [
        {
            "value": "floating",
            "label": "t:sections.instagram.settings.block_image.layout.options__1"
        },
        {
            "value": "carousel",
            "label": "t:sections.instagram.settings.block_image.layout.options__2"
        }],
        "default": "floating",
        "label": "t:sections.instagram.settings.block_image.layout.name"
    },
    {
        "type": "header",
        "content": "t:sections.instagram.settings.block_image.layout.options__1",
        "visible_if": "{{ section.settings.layout == 'floating' }}"
    },
    {
        "type": "range",
        "id": "height_floating",
        "min": 200,
        "max": 1000,
        "step": 10,
        "default": 840,
        "unit": "px",
        "label": "t:sections.instagram.settings.block_image.label__2",
        "visible_if": "{{ section.settings.layout == 'floating' }}"
    },
    {
        "type": "header",
        "content": "t:sections.instagram.settings.block_image.layout.options__2",
        "visible_if": "{{ section.settings.layout == 'carousel' }}"
    },
    {
        "type": "range",
        "id": "carousel_number",
        "min": 2.0,
        "max": 5.0,
        "step": 0.1,
        "label": "t:sections.all.carousel.heading_4",
        "default": 3,
        "visible_if": "{{ section.settings.layout == 'carousel' }}"
    },
    {
        "type": "range",
        "id": "carousel_number_tablet",
        "min": 1.0,
        "max": 3.0,
        "step": 0.1,
        "label": "t:sections.all.carousel.heading_5",
        "default": 3,
        "visible_if": "{{ section.settings.layout == 'carousel' }}"
    },
    {
        "type": "select",
        "id": "carousel_number_mobile",
        "options": [
        {
        "value": "1",
        "label": "1"
        },
        {
        "value": "1.2",
        "label": "1.2"
        },
        {
        "value": "1.5",
        "label": "1.5"
        },
        {
        "value": "2",
        "label": "2"
        }],
        "default": "1.2",
        "label": "t:sections.all.carousel.heading_6",
        "visible_if": "{{ section.settings.layout == 'carousel' }}"
    },
    {
        "type": "range",
        "id": "spacing_desktop",
        "min": 0,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "t:sections.all.carousel.grid.label__1",
        "default": 10,
        "visible_if": "{{ section.settings.layout == 'carousel' }}"
    },
    {
        "type": "range",
        "id": "spacing_tablet",
        "min": 0,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "t:sections.all.carousel.grid.label__2",
        "default": 10,
        "visible_if": "{{ section.settings.layout == 'carousel' }}"
    },
    {
        "type": "range",
        "id": "spacing_mobile",
        "min": 0,
        "max": 50,
