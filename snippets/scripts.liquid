<script type="module">
  const lazyLoadVideoBackground = () => {
    if (lazyLoadVideoBackground.hasLoaded || !document.querySelector('video-background-component')) {
      return;
    }
    lazyLoadVideoBackground.hasLoaded = true;
    import('{{ 'video-background.js' | asset_url }}');
    if (lazyLoadVideoBackground.observer) {
      lazyLoadVideoBackground.observer.disconnect();
      lazyLoadVideoBackground.observer = null;
    }
  };

  lazyLoadVideoBackground();

  if (!lazyLoadVideoBackground.hasLoaded) {
    const observer = new MutationObserver(() => lazyLoadVideoBackground());
    observer.observe(document.documentElement, { childList: true, subtree: true });
    lazyLoadVideoBackground.observer = observer;
    document.addEventListener('DOMContentLoaded', lazyLoadVideoBackground, { once: true });
  }
</script>

